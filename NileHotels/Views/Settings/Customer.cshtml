@model Customer

@{
    Layout = "_LayoutHotel1";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using NileHotels.Resources
@inject IHtmlLocalizer<Resource> localizer

     
@*show all customer in hotel*@

<div class="card-header pb-0">
    <div class="row d-flex flex-row">
        <div class="col-lg-12 col-md-8 col-8">
            <h2>@localizer["Clients"]</h2>
            <button data-bs-toggle="modal" data-bs-target="#EditModal" onclick="clearformCustomer()" class="cursor-pointer bg-transparent border-0" style="display:inline-block">
                <i class="fa-solid fa-plus text-success"></i>
            </button>
         </div>
         
    </div>
</div>
 
<div class="card-body px-0 pb-2">
    <div class="table-responsive">
        <div style="background-color:white"> 
            <table id="example1" class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["ID"]</th>

                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@localizer["Name"]</th>
                        @*<th class="text-uppercase  text-s font-weight-bolder">@localizer["IsShare"]</th>*@
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@localizer["IsCompony"]</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["IdValue"] </th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["Nationality"] </th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["Edit"] </th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["Delete"]</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@localizer["Add Contact"]</th>

                    </tr>
                </thead>
                <tbody id="tbodycustomer">
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>
</div>

 

@*add / edit customer*@
<div class="modal" id="EditModal">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header with-border">
                <h3 class="box-title">@localizer["Add New"] /  @localizer["Edit"] </h3>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    @using (Html.BeginForm("UpdateCustomer", "Settings", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <input type="hidden" asp-for="Id" id="id" />
                            <input type="hidden" asp-for="HotelId" id="hotel" />
                            <div class="form-group">
                                <label class="control-label">@localizer["Hotel"]</label>
                                <select id="Shotelid" class="form-control" disabled="disabled"></select>
                            </div>
                            

                            <div class="row">
                                <div class="col">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" required id="nameAr" class="form-control" />
                                </div>
                                <div class="col">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" required id="nameEn" class="form-control" />
                                </div>
                               
                            </div>

                                <div class="form-group">
                                <label class="control-label">@localizer["Country"]</label>
                                    <select asp-for="CountryId" id="countryId" class="form-control"></select>
                                </div>

                            <div class="row">
                                <div class="form-group col">
                                    <label class="control-label">@localizer["Id Type"]</label>
                                    <select asp-for="IdTypeId" id="idTypeId" class="form-control"></select>
                                </div>
                                <div class="col">
                                    <label asp-for="IdValue" class="control-label"></label>
                                    <input asp-for="IdValue" required id="idValue" class="form-control" />
                                </div>

                            </div>

                                <div>
                                    @Html.CheckBoxFor(m => m.IsShare)
                                    <label>@localizer["IsShare"]</label>
                                </div>
                                <div>
                                    @Html.CheckBoxFor(m => m.IsCompony)
                                    <label>@localizer["IsCompony"]</label>
                                </div>
                            </div>
                        <div class="clearfix"></div>
                        
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">@localizer["Submit"]</button>
                            <button type="button" onclick="clearformCustomer()" class="btn btn-default pull-right" data-bs-dismiss="modal">@localizer["Close"]</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@*delete customer*@
<div class="modal" id="DeleteModal">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header with-border">
                <h3 class="box-title"> @localizer["Delete"]  </h3>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    @using (Html.BeginForm("DeleteCustomer", "Settings", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <input type="hidden" asp-for="Id" id="idd" />
                            <div class="row">
                                <div class="form-group col">
                                    <label class="control-label">@localizer["Hotel"]</label>
                                    <select asp-for="HotelId" id="hotelIdd" class="form-control"></select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" required id="nameArd" class="form-control" />
                                </div>
                                <div class="col">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" required id="nameEnd" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label">@localizer["Country"]</label>
                                <select asp-for="CountryId" id="countryIdd" class="form-control"></select>
                            </div>

                            <div class="row">
                                <div class="form-group col">
                                    <label class="control-label">@localizer["Id Type"]</label>
                                    <select asp-for="IdTypeId" id="idTypeIdd" class="form-control"></select>
                                </div>
                                <div class="col">
                                    <label asp-for="IdValue" class="control-label"></label>
                                    <input asp-for="IdValue" required id="idValued" class="form-control" />
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">@localizer["Delete"]</button>
                            <button type="button" onclick="clearformCustomer()" class="btn btn-default pull-right" data-bs-dismiss="modal">@localizer["Close"]</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@*add customer contact*@

<div class="modal" id="contactModal" >
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header with-border">
                <h3 class="box-title"> @localizer["Add New"] </h3>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    <div class="modal-body">
                        <input type="hidden" id="customerid" />
                        <input type="hidden" id="contactid" />
                        <div class="row">
                            <div class="form-group col">
                                <label class="control-label">@localizer["ContactType"] </label>
                                <select id="contactTypeId" class="form-control"></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label class="control-label">@localizer["phone/Email"]</label>
                                <input required id="value" class="form-control" />
                            </div>
                            <div class="col">
                                <label class="control-label">@localizer["Description"]</label>
                                <input required id="description" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="saveCustomercontact">@localizer["Submit"]</button>
                    <button type="button" onclick="clearCustomercontactmodal()" class="btn btn-default pull-right" data-bs-dismiss="modal">@localizer["Close"]</button>
                </div>

                <div  class="table-responsive" style="color:white">

                    <table id="example1" class="table table-bordered  align-items-center mb-0" style="color:black">
                        <thead>
                            <tr>
                                <th class="text-uppercase   font-weight-bolder ">@localizer["ID"]</th>

                                
                                <th class="text-uppercase   font-weight-bolder ">@localizer["ContactType"]</th>
                                <th class="text-uppercase   font-weight-bolder ">@localizer["phone/Email"]</th>
                                
                                <th class="text-uppercase   font-weight-bolder ">@localizer["Decription"] </th>
                                @*<th class="text-uppercase   font-weight-bolder ">@localizer["Edit"] </th>
                                <th class="text-uppercase   font-weight-bolder ">@localizer["Delete"]</th>*@


                            </tr>
                        </thead>
                        <tbody id="customercontactbody">
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
