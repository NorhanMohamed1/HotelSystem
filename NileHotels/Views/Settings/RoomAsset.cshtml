<div class="modal" id="EditModal">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header with-border">
                <h3 class="box-title"> @localizer["Add New"] /  @localizer["Edit"] </h3>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    @using (Html.BeginForm("UpdateRoomAsset", "Settings", FormMethod.Post))
                    {
                        <div class="modal-body">
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id" id="id" />
                                <div class="form-group">
                                    <label class="control-label">@localizer["RoomNo"]</label>
                                    <select asp-for="RoomId" id="roomId" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">@localizer["Asset Type"]</label>
                                    <select asp-for="AssetTypeId" id="assetTypeId" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">@localizer["Asset"]</label>
                                    <select asp-for="AssetId" id="assetId" class="form-control"></select>
                                </div>
                                    <label asp-for="Qty" class="control-label"></label>
                                    <input asp-for="Qty" required id="qty" class="form-control" />
                                    
                                </div>
                         
                            <div class="clearfix"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">@localizer["Submit"]</button>
                            <button type="button" onclick="clearformRoomAsset()" class="btn btn-default pull-right" data-bs-dismiss="modal">@localizer["Close"]</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="DeleteModal">
    <div class="modal-dialog" role="dialog">
        <div class="modal-content">
            <div class="modal-header with-border">
                <h3 class="box-title"> @localizer["Delete"]   </h3>
            </div>
            <div class="modal-body">
                <div class="box box-primary">
                    @using (Html.BeginForm("DeleteRoomAsset", "Settings", FormMethod.Post))
                    {
                        <div class="modal-body">
                            
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id" id="idd" />

                                   
                                    <div class="form-group">
                                        <label class="control-label">@localizer["RoomNo"]</label>
                                        <select asp-for="RoomId" id="roomIdd" class="form-control"></select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@localizer["Asset Type"]</label>
                                        <select asp-for="AssetTypeId" id="assetTypeIdd" class="form-control"></select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@localizer["Asset"]</label>
                                        <select asp-for="AssetId" id="assetIdd" class="form-control"></select>
                                    </div>
                                   
                                    <label asp-for="Qty" class="control-label"></label>
                                    <input asp-for="Qty" required id="qtyd" class="form-control" />


                                </div>
                          
                            <div class="clearfix"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">@localizer["Delete"]</button>
                            <button type="button" onclick="clearformRoomAsset()" class="btn btn-default pull-right" data-bs-dismiss="modal">@localizer["Close"]</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
     
}

